 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@model IEnumerable<SampleCore.Core.Model.Employee>

@{
    ViewData["Title"] = "Home Page";
}

    <title>List of Persons</title>
    <a href="https://localhost:7117/">
            <button class="btn btn-primary btn-lg" style="height:contain"> Go back</button>
        </a>
<table class="table" style="width:130%" >
    <thead>
        <tr>
             <th >
                @Html.DisplayNameFor(model => model.empid)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.firstName)
            </th>
            
            <th >
                @Html.DisplayNameFor(model => model.lastName)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.department)
            </th>
             <th >
                @Html.DisplayNameFor(model => model.age)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.qualification)
            </th>

            <th >
                @Html.DisplayNameFor(model => model.gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phone)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.address)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.password)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.retypePassword)
            </th>
          <th > </th>
        </tr> </thead>
        @foreach (var i in Model)
        {
            <tr>
                <th >
                @Html.DisplayFor(model => i.empid)
            </th>
                
                <td>
                    @Html.DisplayFor(model => i.firstName)
                </td>
               
                <td>
                     @Html.DisplayFor(model => i.lastName)
                </td>
                <td>
                    @Html.DisplayFor(model => i.department)
                </td>
                <td>
                    @Html.DisplayFor(model => i.age)
                </td>
                <td>
                    @Html.DisplayFor(model => i.qualification)
                </td>
                <td>
                    @Html.DisplayFor(model => i.gender)
                </td>
                <td>
                    @Html.DisplayFor(model => i.phone)
                </td>
                <td>
                    @Html.DisplayFor(model => i.email)
                </td>
                 <td>
                    @Html.DisplayFor(model => i.address)
                </td>
                <td>
                    @Html.DisplayFor(model => i.password)
                </td>
                <td>
                @Html.DisplayFor(model =>i.retypePassword)
                </td>
               
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id=i.empid})
                    <i class="fa fa-edit" style="font-size:24px;color:black;"></i>

                   @*@Html.ActionLink("", "Edit", new {id=i.empid},
        new{@class="fa fa-edit",title="Edit",style="font-size:24px;color:cadetblue;"}) <br/>*@

          <button type="submit" style="border:hidden;background-color:white" 
          onclick="return confirm('Are you sure you want to delete this details: @i.empid,@i.firstName,@i.lastName,@i.department,@i.age,@i.qualification,@i.gender,@i.email,@i.address,@i.password,@i.retypePassword')">@Html.ActionLink("Delete", "Delete",
          new {employee_id = i.empid}) </button>

       

        @Html.ActionLink("", "Delete", new {employee_id = i.empid},
        new{@class="fa fa-trash-o",title="Delete",style="font-size:24px;color:red;"})
                </td>
            </tr>
        }
        
</table>
